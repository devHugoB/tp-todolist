{% extends 'base.html.twig' %}

{% block title %}Ma Tâche{% endblock %}

{% block body %}
    <h1>Tâche</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ task.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ task.description }}</td>
            </tr>
            <tr>
                <th>Créer le</th>
                <td>{{ task.createdAt ? task.createdAt|date('d/m/Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Fini ?</th>
                <td>{{ task.finished ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Fini le</th>
                <td>{{ task.finishedAt ? task.finishedAt|date('d/m/Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('task_index') }}">Retourner voir mes tâches</a>

    <a href="{{ path('task_edit', {'id': task.id}) }}">Éditer</a>

    {{ include('task/_delete_form.html.twig') }}
{% endblock %}
